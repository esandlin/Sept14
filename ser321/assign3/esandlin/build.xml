<?xml version="1.0" encoding="UTF-8" standalone="no"?>
	<project basedir="." default="compile" name="main">

		<!-- The value of a property -->   
	   <property name="src.dir" location="src" />    
	   <property name="build.dir" location="bin" />   
	   <property name="libs.dir" location="libs" />  
	   <property name="docs.dir" location="docs" />
		
		<path id="compile.classpath">
		      <pathelement location="${build}"/>
		</path>
		
		<path id="Client.classpath">
		        <pathelement location="bin"/>
		</path>
				
		<path id="run.${build.dir}.classpath">
		        <path refid="${build.dir}.classpath"/>
		</path>
		
	<!-- Deletes the existing build, docs and dist directory-->   
		   <target name="clean">   
		      <delete dir="${build.dir}" />       
		      <delete dir="${docs.dir}" />      
		      <delete dir="${libs.dir}" />   
		   </target>
		
		<!-- Creates the  build, docs and dist directory--> 
		   <target name="makedir">       
		     <mkdir dir="${build.dir}" />   
		     <mkdir dir="${docs.dir}" />     
		     <mkdir dir="${libs.dir}" /> 
		   </target> 
				
		    <target name="compile">
		        <mkdir dir="build/classes"/>
		        <javac srcdir="src" destdir="build/classes"/>
		    </target>

		    <target name="jar">
		        <mkdir dir="build/jar"/>
		        <jar destfile="${build}/jar/Client.jar" basedir="${build}/classes">
		            <manifest>
		                <attribute name="Main-Class" value="src/client/Client"/>
		            </manifest>
		        </jar>
		    </target>

		    <target name="run">
		        <java jar="build/jar/Client.jar" fork="true"/>
		    </target>

		</project>